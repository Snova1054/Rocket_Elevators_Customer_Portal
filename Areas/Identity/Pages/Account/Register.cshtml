@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row d-flex justify-content-around">
    <div class="col-md" style="padding:0px">
        <img src="https://rocket-elevators.xyz/images/WorldElevator.jpg">
    </div>
    <div class="col-md" style="padding:0px">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>@ViewData["Title"]</h1>
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" onclick="wait_before_doing_click()">Register</button>
        </form>
    </div>
    <div class="col-md" style="padding:0px">
        <img src="https://rocket-elevators.xyz/images/Hydrogen.jpg">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
